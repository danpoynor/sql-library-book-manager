extends ../layout

block content
  include ../includes/subhead.pug

  p
    a(class="button" href="/authors/new")
      | New Author &#43;

  if(authors.length === 0)
    p.errors
      | No authors found.
  else
    table
      thead
        tr
          th Name
          th Book Count
          th Actions
      tbody.hover-row
        each author in authors
          tr
            td
              a(href=`/authors/${author.id}`)= author.fullName()
            td.number= author.Books.length
            td.actions
              a(href=`/authors/${author.id}`)
                | View
              a(href=`/authors/${author.id}/edit`)
                | Edit
              a(href=`/authors/${author.id}/delete`)
                | Delete
